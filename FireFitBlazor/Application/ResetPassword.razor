@* @page "/reset-password"
@using FireFitBlazor.Domain.Services
@using Microsoft.AspNetCore.Components.Forms
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Reset Password</h3>
                </div>
                <div class="card-body">
                    <EditForm Model="@UserResetPassword" OnValidSubmit="HandleValidSubmit" TIem="UserResetPassword">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <InputText id="email" @bind-Value="UserResetPassword.Email" class="form-control" />
                            <ValidationMessage For="@(() => UserResetPassword.Email)" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">New Password</label>
                            <InputText id="password" @bind-Value="UserResetPassword.Password" type="password" class="form-control" />
                            <ValidationMessage For="@(() => UserResetPassword.Password)" />
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm New Password</label>
                            <InputText id="confirmPassword" @bind-Value="UserResetPassword.ConfirmPassword" type="password" class="form-control" />
                            <ValidationMessage For="@(() => UserResetPassword.ConfirmPassword)" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@IsLoading">
                                @if (IsLoading)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span> Resetting...</span>
                                }
                                else
                                {
                                    <span>Reset Password</span>
                                }
                            </button>
                        </div>
                    </EditForm>

                    <div class="mt-3 text-center">
                        <p><a href="/login">Back to Login</a></p>
                    </div>

                    @if (!string.IsNullOrEmpty(Message))
                    {
                        <div class="alert @(IsError ? "alert-danger" : "alert-success") mt-3">
                            @Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
 *@