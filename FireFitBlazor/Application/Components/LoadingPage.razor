@using Microsoft.AspNetCore.Components.Web
@rendermode RenderMode.InteractiveServer

<div class="loading-container">
    <div class="loading-content">
        <img src="/images/fire-flame-logo-design-template-vector.png" alt="FireFit Logo" class="loading-logo" />
        <div class="loading-text">Analyzing your food...</div>
        <div class="loading-spinner"></div>
    </div>
</div>

<style>
    .loading-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .loading-content {
        text-align: center;
    }

    .loading-logo {
        width: 150px;
        height: auto;
        margin-bottom: 2rem;
    }

    .loading-text {
        font-size: 1.2rem;
        color: #333;
        margin-bottom: 1rem;
    }

    .loading-spinner {
        width: 40px;
        height: 40px;
        border: 4px solid #f3f3f3;
        border-top: 4px solid #FF5722;
        border-radius: 50%;
        margin: 0 auto;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style> 