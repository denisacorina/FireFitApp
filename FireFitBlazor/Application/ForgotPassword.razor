@* @page "/forgot-password"
@using FireFitBlazor.Domain.Services
@using Microsoft.AspNetCore.Components.Forms


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Forgot Password</h3>
                </div>
                <div class="card-body">
                    <EditForm Model="@UserForgotPassword" OnValidSubmit="HandleValidSubmit" TItem="UserForgotPassword">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <InputText id="email" @bind-Value="UserForgotPassword.Email" class="form-control" />
                            <ValidationMessage For="@(() => UserForgotPassword.Email)" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@IsLoading">
                                @if (IsLoading)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span> Sending...</span>
                                }
                                else
                                {
                                    <span>Send Reset Link</span>
                                }
                            </button>
                        </div>
                    </EditForm>

                    <div class="mt-3 text-center">
                        <p><a href="/login">Back to Login</a></p>
                    </div>

                    @if (!string.IsNullOrEmpty(Message))
                    {
                        <div class="alert @(IsError ? "alert-danger" : "alert-success") mt-3">
                            @Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>  *@